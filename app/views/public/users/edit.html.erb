<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @user, url: information_path do |f| %>
        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像" %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :name %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :email %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "紹介文" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存', class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!--render後のURLを指定-->
<%= render 'layouts/specify_url', url: '/information/edit' %>