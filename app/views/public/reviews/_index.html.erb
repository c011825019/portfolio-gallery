<div class="overflow-auto h-100">
  <% reviews.each do |review| %>
    <div class="card mt-2">
      <div class="card-header">
        <%= link_to user_path(review.user) do %>
          <%= image_tag review.user.get_profile_image, size: "30x30", class: "rounded-circle" %>
        <% end %>
        <span><%= review.user.name %></span>
        <%= render 'public/reviews/static_evaluation', review: review %>
        <% if review.user == current_user %>
          <div class="float-right">
            <%= link_to edit_portfolio_review_path(portfolio, review) do %>
              <i class="fas fa-edit" style="color: gray;"></i>
            <% end %>
            <%= link_to portfolio_review_path(portfolio, review), method: :delete do %>
              <i class="fas fa-trash" style="color: gray;"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="card-body">
        <p><%= simple_format(h(review.comment)) %></p>
      </div>
    </div>
  <% end %>
</div>