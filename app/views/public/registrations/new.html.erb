<div class="container">
  <div class="row">
    <div class="col-5 mt-3 mx-auto">
      <h4>新規登録</h4>
      <%= form_with model: @user, url: user_registration_path do |f| %>

        <div class="form-group">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :name %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :email %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :password %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :password_confirmation %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
<!--render後に読み込み-->
<script>
  history.replaceState('', '', '/users/sign_up')
</script>