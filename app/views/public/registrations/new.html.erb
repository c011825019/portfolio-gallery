<div class="container">
  <div class="row">
    <div class="col-md-5 col-12 mt-3 mx-auto">
      <h4>新規登録</h4>
      <%= form_with model: @user, url: user_registration_path do |f| %>

        <div class="form-group">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名を入力", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :name %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :email %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :password %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <%= render 'layouts/errors', object: @user, parameter: :password_confirmation %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "新規登録", class: "btn btn-sm btn-primary btn-block" %>
        </div>
      <% end %>

      <h4>新規登録がお済の方</h4>
      <p><%= render "public/shared/links" %>からログインしてください</p>
      <p>
        ゲストログインは<%= link_to 'こちら', users_guest_sign_in_path, method: :post %></br>
        ※投稿・レビューの閲覧のみ行うことができます
      </p>
    </div>
  </div>
</div>

<!--render後のURLを指定-->
<%= render 'layouts/specify_url', url: '/users/sign_up' %>