<%= form_with model: portfolio do |f| %>
  <h6>画像</h6>
  <%= f.file_field :image, accept: "image/*" %>
  <h6>投稿名</h6>
  <%= f.text_field :name %>
  <h6>タグ</h6>
  <%= f.text_field :tag_name, value: @tag_list %>
  <h6>カテゴリー</h6>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
    <div>
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    </div>
  <% end %>
  <h6>概要</h6>
  <%= f.text_area :outline %>
  <h6>投稿リンク</h6>
  <%= f.text_field :url %>
  <%= f.submit '投稿' %>
<% end %>