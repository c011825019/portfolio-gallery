<div class="container">
  <div class="row">
    <div class="col">

      <%= render 'layouts/errors', obj: @category %>

      <%= form_with model: @category, url: admin_category_path do |f| %>
        <div class="form-group">
          <%= f.label :name, "カテゴリー名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit '変更', class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!--render後のURLを指定-->
<%= render 'layouts/specify_url', url: "/admin/categorys/#{@category.id}/edit" %>