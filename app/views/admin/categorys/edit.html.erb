<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @category, url: admin_category_path do |f| %>
        <div class="form-group">
          <%= f.label :name, "カテゴリー名" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= render 'layouts/errors', object: @category, parameter: :name %>
        </div>
        <div class="form-group">
          <%= f.submit '変更' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!--render後のURLを指定-->
<%= render 'layouts/specify_url', url: "/admin/categorys/#{@category.id}/edit" %>