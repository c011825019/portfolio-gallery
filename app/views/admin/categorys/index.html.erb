<div class="container">
  <div class="row">
    <div class="col">
      <h4>カテゴリー追加</h4>

      <%= render 'layouts/errors', obj: @category %>

      <%= form_with model: @category, url: admin_categorys_path do |f| %>
        <div class="form-group">
          <%= f.label :name, "カテゴリー名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit '追加', class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>

      <h4>投稿一覧</h4>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>カテゴリーID</th>
            <th>カテゴリー名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categorys.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td><%= link_to '編集', edit_admin_category_path(category) %></td>
              <td><%= link_to '削除', admin_category_path(category), method: :delete, data: { confirm: '削除しますか？' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @categorys %>
    </div>
  </div>
</div>