<div class="container-fluid">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10 mt-5">
      <div class="row">
        <div class="col-6">
        <%= image_tag @portfolio.get_image, class: "img-fluid" %>
        </div>
        <div class="col-4">
          <h5><%= @portfolio.name %></h5>
          <p><%= simple_format(@portfolio.outline) %></p>
          <p><%= @portfolio.url %></p>
          <p><%= @portfolio.is_public %></p>

          <% @portfolio.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
          <% @portfolio.categorys.each do |category| %>
            <%= category.name %>
          <% end %>
          <%= link_to '編集', edit_admin_portfolio_path(@portfolio) %>
        </div>
      </div>
    </div>
  </div>
</div>